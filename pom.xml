<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.student</groupId>
        <artifactId>student</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <groupId>org.kuali.student.core</groupId>
    <artifactId>ks-core</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <name>KS Core</name>
    <packaging>pom</packaging>
    <modules>
        <module>ks-core-sql</module>
        <module>ks-rice-sql</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.kuali.maven.plugins</groupId>
                    <artifactId>metainf-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>schema</id>
                            <goals>
                                <goal>metainf</goal>
                            </goals>
                            <configuration>
                                <include>${sql.schema.include}</include>
                                <outputFile>${sql.meta.output.base}-schema.resources</outputFile>
                            </configuration>
                        </execution>
                        <execution>
                            <id>data</id>
                            <goals>
                                <goal>metainf</goal>
                            </goals>
                            <configuration>
                                <include>${sql.data.include}</include>
                                <outputFile>${sql.meta.output.base}-data.resources</outputFile>
                            </configuration>
                        </execution>
                        <execution>
                            <id>constraints</id>
                            <goals>
                                <goal>metainf</goal>
                            </goals>
                            <configuration>
                                <include>${sql.constraints.include}</include>
                                <outputFile>${sql.meta.output.base}-constraints.resources</outputFile>
                            </configuration>
                        </execution>
                        <execution>
                            <id>upgrades</id>
                            <goals>
                                <goal>metainf</goal>
                            </goals>
                            <configuration>
                                <include>**/upgrades/**/*.sql</include>
                                <outputFile>${project.build.outputDirectory}/META-INF/sql/oracle/${project.artifactId}-upgrades.resources</outputFile>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
