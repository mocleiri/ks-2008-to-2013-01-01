<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>

    <!-- Course Search REST service -->
    <bean id="courseSearchApplication" class="org.restlet.Application">
             <property name="root" ref="springRouter"/>
     </bean>

    <bean id="courseSearchComponent" class="org.restlet.ext.spring.SpringComponent">
        <property name="defaultTarget" ref="courseSearchApplication"/>
    </bean>

    <!--  Define the router -->
    <bean name="springRouter" class="org.restlet.ext.spring.SpringBeanRouter"/>

    <!-- Define all the routes -->
    <bean name="/course/{queryText}/{termParam}/{campusParam}" class="edu.uw.kuali.student.service.rest.impl.CourseSearchRestServiceImpl" scope="prototype"
          autowire="byName"/>

</beans>