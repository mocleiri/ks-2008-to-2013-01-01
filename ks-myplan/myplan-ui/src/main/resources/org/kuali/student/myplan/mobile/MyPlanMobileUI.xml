    <bean id="M.CourseDetails-InquiryView" parent="M.MyPlanInquiryView">
        <property name="headerText" value="@{dataObject.code}"/>
        <property name="page.header.headerText" value="@{dataObject.code}"/>
        <property name="viewName" value="M.CourseDetails"/>
        <property name="singlePageView" value="true"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.course.dataobject.CourseDetails"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.myplan.course.service.CourseDetailsInquiryViewHelperServiceImpl"/>
        <property name="items">
            <list>
                <ref bean="m_course_details_section"/>
            </list>
        </property>
    </bean>


    <bean id="m_course_details_section" parent="Uif-VerticalBoxSection" p:headerText="@{dataObject.courseTitle}"
          p:style="margin-top:-1em;">
        <property name="header">
            <bean parent="Uif-HeaderFour"/>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-course-details</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="M.Uif-Grid-Solo" p:style="margin:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="Course Description"
                                  p:renderColon="false" p:cssClasses="ui-block-a"/>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Solo">
                    <property name="items">
                        <list>
                            <bean parent="M.Uif-DataField" p:fieldLabel.render="false"
                                  p:propertyName="courseDescription" p:escapeHtmlInPropertyValue="false"
                                  p:cssClasses="ui-block-a">
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Solo" p:style="margin:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="Course Requisites"
                                  p:renderColon="false" p:cssClasses="ui-block-a"/>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Solo">
                    <property name="items">
                        <list>
                            <bean parent="M.Uif-DataField" p:propertyName="requisites"
                                  p:fieldLabel.render="false"
                                  p:escapeHtmlInPropertyValue="false">
                                <property name="propertyEditor" ref="data_list_formatter"/>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>ui-block-a</value>
                                        <value>myplan-data-list</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Two">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="Quarters"
                                  p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                            <bean parent="Uif-VerticalBoxGroup" p:width="60%">
                                <property name="cssClasses">
                                    <list>
                                        <value>ui-block-b</value>
                                    </list>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HorizontalBoxGroup">
                                            <property name="items">
                                                <list>
                                                    <bean parent="M.Uif-DataField"
                                                          p:propertyName="scheduledTerms"
                                                          p:escapeHtmlInPropertyValue="false">
                                                        <property name="propertyEditor"
                                                                  ref="scheduled_terms_list_formatter"/>
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>myplan-data-list</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-Message"
                                                          p:messageText="(Source: Time Schedule)">
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-font-size-90</value>
                                                                <value>fl-text-gray</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-HorizontalBoxGroup"
                                              p:render="@{dataObject.scheduledTerms.size() gt 0 ? false : true}">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-Message"
                                                          p:messageText="Last offered in @{dataObject.lastOffered}"
                                                          p:render="@{dataObject.lastOffered ne null ? true : false}"/>
                                                    <bean parent="Uif-Message"
                                                          p:messageText="Not offered for more than 10 years."
                                                          p:render="@{dataObject.lastOffered eq null ? true : false}"/>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-HorizontalBoxGroup">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-Message"
                                                          p:messageText="Projected to be offered in "
                                                          p:render="@{dataObject.termsOffered.size() gt 0 ? true : false}"
                                                          p:style="margin: 0 0.33em 0 0;"/>
                                                    <bean parent="M.Uif-DataField"
                                                          p:propertyName="termsOffered"
                                                          p:fieldLabel.render="false"
                                                          p:style="margin: 0 0.33em 0 0; padding-top: 3px;"
                                                          p:escapeHtmlInPropertyValue="false">
                                                        <property name="propertyEditor"
                                                                  ref="terms_formatter"/>
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>myplan-data-list</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-Message" p:messageText="quarters"
                                                          p:render="@{dataObject.termsOffered.size() gt 0 ? true : false}"/>
                                                    <bean parent="Uif-Message"
                                                          p:messageText="(Source: Course Catalog)">
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-font-size-90</value>
                                                                <value>fl-text-gray</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Two">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="Credits"
                                  p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                            <bean parent="M.Uif-DataField" p:fieldLabel.render="false"
                                  p:propertyName="credit" p:escapeHtmlInPropertyValue="false" p:cssClasses="ui-block-b"
                                  p:width="60%"/>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Two">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="General Edu. Req."
                                  p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                            <bean parent="M.Uif-DataField"
                                  p:propertyName="genEdRequirements"
                                  p:fieldLabel.renderColon="false"
                                  p:escapeHtmlInPropertyValue="false" p:width="60%">

                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>ui-block-b</value>
                                        <value>myplan-stacked-list</value>
                                    </list>
                                </property>
                                <property name="propertyEditor"
                                          ref="data_list_formatter"/>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Two">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="Curriculum"
                                  p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                            <bean parent="M.Uif-DataField"
                                  p:propertyName="curriculumTitle"
                                  p:fieldLabel.render="false"
                                  p:cssClasses="ui-block-b" p:width="60%"/>
                        </list>
                    </property>
                </bean>

                <bean parent="M.Uif-Grid-Two">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="Campus"
                                  p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                            <bean parent="M.Uif-DataField"
                                  p:propertyName="campusLocations"
                                  p:fieldLabel.render="false"
                                  p:escapeHtmlInPropertyValue="false" p:width="60%">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>ui-block-b</value>
                                        <value>myplan-data-list</value>
                                    </list>
                                </property>
                                <property name="propertyEditor" ref="data_list_formatter"/>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <!-- Mobile bookmark list -->
    <bean id="M.SavedCoursesSummary-LookupView" parent="M.MyPlanLookupView">
        <property name="headerText" value="Bookmarked Courses"/>
        <property name="page.header.headerText" value="Bookmarked Courses"/>
        <property name="viewName" value="M.SavedCoursesSummary"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="footer.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.plan.dataobject.PlannedCourseDataObject"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.myplan.plan.service.SavedCoursesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>

        <!-- Not Displaying any criteria -->
        <property name="criteriaGroup">
            <bean parent="Uif-VerticalBoxGroup" p:validationMessages.render="false"/>
        </property>
        <property name="resultsGroup">
            <bean id="m_saved_courses_summary" parent="m_saved_courses_summary_list"/>
        </property>
    </bean>

    <bean id="m_saved_courses_summary_list" parent="M.Uif-CollapsibleListSection">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-saved-courses-summary</value>
            </list>
        </property>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.plan.dataobject.PlannedCourseDataObject"/>
        <property name="propertyName" value="lookupResults"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="true"/>
        <property name="layoutManager.lineGroupPrototype.header.headerText"
                  value="&lt;div class='code'&gt;@{#line.courseDetails.code} &lt;/div&gt;&lt;div class='title'&gt;@{#line.courseDetails.courseTitle} (@{#line.courseDetails.credit})&lt;/div&gt;"/>
        <!--<property name="filters">
            <list>
                <bean parent="Uif-ConditionalCollectionFilter" p:expression="#index lt 10"/>
            </list>
        </property>-->
        <property name="items">
            <list>
                <bean parent="M.Uif-AccordionFieldGroup" p:group.validationMessages.render="false"
                      p:fieldLabel.render="false" p:id="@{#line.planItemDataObject.id}" p:style="cursor:pointer;"
                      p:group.header.render="false">
                    <property name="items">
                        <list>

                            <bean parent="M.Uif-Grid-Two">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Label" p:labelText="Quarters"
                                              p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                                        <bean parent="Uif-VerticalBoxGroup" p:width="60%">
                                            <property name="cssClasses">
                                                <list>
                                                    <value>ui-block-b</value>
                                                </list>
                                            </property>
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxGroup">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="M.Uif-DataField"
                                                                      p:propertyName="courseDetails.scheduledTerms"
                                                                      p:escapeHtmlInPropertyValue="false">
                                                                    <property name="propertyEditor"
                                                                              ref="scheduled_terms_list_formatter"/>
                                                                    <property name="cssClasses">
                                                                        <list merge="true">
                                                                            <value>myplan-data-list</value>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                                <bean parent="Uif-Message"
                                                                      p:messageText="(Source: Time Schedule)">
                                                                    <property name="cssClasses">
                                                                        <list merge="true">
                                                                            <value>fl-font-size-90</value>
                                                                            <value>fl-text-gray</value>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-HorizontalBoxGroup"
                                                          p:render="@{#line.courseDetails.scheduledTerms.size() gt 0 ? false : true}">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Message"
                                                                      p:messageText="Last offered in @{#line.courseDetails.lastOffered}"
                                                                      p:render="@{#line.courseDetails.lastOffered ne null ? true : false}"/>
                                                                <bean parent="Uif-Message"
                                                                      p:messageText="Not offered for more than 10 years."
                                                                      p:render="@{#line.courseDetails.lastOffered eq null ? true : false}"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-HorizontalBoxGroup">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Message"
                                                                      p:messageText="Projected to be offered in "
                                                                      p:render="@{#line.courseDetails.termsOffered.size() gt 0 ? true : false}"
                                                                      p:style="margin: 0 0.33em 0 0;"/>
                                                                <bean parent="M.Uif-DataField"
                                                                      p:propertyName="courseDetails.termsOffered"
                                                                      p:fieldLabel.render="false"
                                                                      p:style="margin: 0 0.33em 0 0; padding-top: 3px;"
                                                                      p:escapeHtmlInPropertyValue="false">
                                                                    <property name="propertyEditor"
                                                                              ref="terms_formatter"/>
                                                                    <property name="cssClasses">
                                                                        <list merge="true">
                                                                            <value>myplan-data-list</value>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                                <bean parent="Uif-Message" p:messageText="quarters"
                                                                      p:render="@{#line.courseDetails.termsOffered.size() gt 0 ? true : false}"/>
                                                                <bean parent="Uif-Message"
                                                                      p:messageText="(Source: Course Catalog)">
                                                                    <property name="cssClasses">
                                                                        <list merge="true">
                                                                            <value>fl-font-size-90</value>
                                                                            <value>fl-text-gray</value>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>


                            <bean parent="M.Uif-Grid-Two">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Label" p:labelText="Credits"
                                              p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                                        <bean parent="M.Uif-DataField" p:fieldLabel.render="false"
                                              p:propertyName="courseDetails.credit" p:escapeHtmlInPropertyValue="false"
                                              p:cssClasses="ui-block-b"
                                              p:width="60%"/>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="M.Uif-Grid-Two">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Label" p:labelText="General Edu. Req."
                                              p:renderColon="false" p:cssClasses="ui-block-a" p:width="40%"/>
                                        <bean parent="M.Uif-DataField"
                                              p:propertyName="courseDetails.genEdRequirements"
                                              p:fieldLabel.renderColon="false"
                                              p:escapeHtmlInPropertyValue="false" p:width="60%">

                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>ui-block-b</value>
                                                    <value>myplan-stacked-list</value>
                                                </list>
                                            </property>
                                            <property name="propertyEditor"
                                                      ref="data_list_formatter"/>
                                        </bean>
                                    </list>
                                </property>
                            </bean>



                            <bean parent="M.Uif-Grid-Solo" p:style="margin:0;">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Label" p:labelText="Course Requisites"
                                              p:renderColon="false" p:cssClasses="ui-block-a"/>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="M.Uif-Grid-Solo">
                                <property name="items">
                                    <list>
                                        <bean parent="M.Uif-DataField" p:propertyName="courseDetails.requisites"
                                              p:fieldLabel.render="false"
                                              p:escapeHtmlInPropertyValue="false">
                                            <property name="propertyEditor" ref="data_list_formatter"/>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>ui-block-a</value>
                                                    <value>myplan-data-list</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="M.Uif-Grid-Solo">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Link" p:target="" p:cssClasses="ui-block-a"
                                              p:style="display:inline-block;">
                                            <property name="linkText" value="View more details"/>
                                            <property name="title"
                                                      value="View more details about @{#line.courseDetails.code}"/>
                                            <property name="href"
                                                      value="inquiry?methodToCall=start&amp;viewId=M.CourseDetails-InquiryView&amp;courseId=@{#line.courseDetails.courseId}"/>
                                            <property name="dataAttributes">
                                                <map>
                                                    <entry key="role" value="button"/>
                                                    <entry key="mini" value="true"/>
                                                    <entry key="icon" value="info"/>
                                                    <entry key="inline" value="true"/>
                                                    <entry key="theme" value="b"/>
                                                </map>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer">
            <bean parent="saved_courses_summary_footer"/>
        </property>
    </bean>

</beans>
