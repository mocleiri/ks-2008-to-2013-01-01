    <bean id="MyPlanTheme" abstract="true" parent="MyPlanTheme-parentBean"/>
    <bean id="MyPlanTheme-parentBean" parent="Uif-KradTheme">
        <property name="cssFiles">
            <list merge="true">
                <value>ks-myplan/css/myplan.css</value>
                <value>ks-myplan/jquery-bubblepopup/jquery.bubblepopup.css</value>
                <value>ks-myplan/jquery-ui/jquery-ui.css</value>
            </list>
        </property>
        <property name="scriptFiles">
            <list merge="true">
                <value>ks-myplan/scripts/myplan.widgets.js</value>
                <value>ks-myplan/scripts/myplan.events.js</value>
                <value>ks-myplan/plugins/jquery.subscribe.js</value>
                <value>ks-myplan/jquery-bubblepopup/jquery.bubblepopup.min.js</value>
                <value>ks-myplan/scripts/myplan.google.js</value>
            </list>
        </property>
    </bean>


    <bean id="M.MyPlanBaseInquiryView" abstract="true" parent="Uif-InquiryView">

        <property name="preloadPoolSize" value="5"/>

        <property name="theme">
            <bean parent="MyPlanTheme"/>
        </property>
        <property name="persistFormToSession" value="false"/>
    </bean>

    <bean id="M.MyPlanInquiryView" abstract="true" parent="M.MyPlanBaseInquiryView">


        <property name="applicationHeader">
            <bean parent="Uif-HeaderOne" p:id="ks-banner"
                  p:template="/ks-myplan/WEB-INF/ftl/templates/MyPlanApplicationHeader.ftl"
                  p:cssClasses="fl-container-flex" p:templateName="myplan_app_header"/>
        </property>
    </bean>

    <bean id="M.Uif-DataField" parent="Uif-DataField-parentBean">
        <property name="template" value="/ks-myplan/WEB-INF/ftl/mobile/m.dataInputField.ftl"/>
        <property name="templateName" value="m_uif_dataInputField"/>
        <property name="readOnly" value="true"/>
        <property name="bindingInfo">
          <ref bean="Uif-BindingInfo"/>
        </property>
        <property name="inquiry">
          <bean parent="Uif-Inquiry"/>
        </property>
        <property name="help">
          <bean parent="Uif-Help"/>
        </property>
     </bean>


  <bean id="M.Uif-Grid-Two" parent="M.Uif-Grid-parentBean">
      <property name="cssClasses">
        <list>
          <value>ui-grid-a</value>
        </list>
      </property>
  </bean>

  <bean id="M.Uif-Grid-Three" parent="M.Uif-Grid-parentBean">
      <property name="cssClasses">
        <list>
          <value>ui-grid-b</value>
        </list>
      </property>
  </bean>

  <bean id="M.Uif-Grid-parentBean" abstract="true" parent="Uif-GroupBase" scope="prototype">
    <property name="cssClasses">
      <list>
        <value>ui-grid-solo</value>
      </list>
    </property>
    <property name="validationMessages">
      <bean parent="Uif-GroupValidationMessages" p:render="false"/>
    </property>
    <property name="template" value="/ks-myplan/WEB-INF/ftl/mobile/m.grid.ftl"/>
    <property name="templateName" value="m_uif_grid"/>
    <property name="layoutManager">
      <bean parent="Uif-HorizontalBoxLayout"/>
    </property>
  </bean>






</beans>
