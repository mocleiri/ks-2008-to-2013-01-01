    <import resource="classpath:ks-TypeInfo-dictionary.xml"/>
    <import resource="classpath:UifKSDefinitions.xml"/>
    <!-- LookupView -->
    <bean id="KS-TypeInfo-AdminLookupView" parent="KSLookupView"
        p:title="Type Lookup"
        p:dataObjectClassName="org.kuali.student.r2.core.class1.type.dto.TypeInfo"
        p:viewHelperServiceClass="org.kuali.student.ui.admin.type.TypeInfoAdminLookupableImpl">

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="keywordSearch" 
                      p:label="Keyword(s)" 
                      p:helpSummary="Searches fields like name and description to see if they contain the keyword" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="key" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="effectiveDate" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="expirationDate" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="refObjectUri" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="serviceUri" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-DataField" p:propertyName="key" />
                <bean parent="Uif-DataField" p:propertyName="name" />
                <bean parent="Uif-DataField" p:propertyName="effectiveDate" />
                <bean parent="Uif-DataField" p:propertyName="expirationDate" />
                <bean parent="Uif-DataField" p:propertyName="refObjectUri" />
                <bean parent="Uif-DataField" p:propertyName="serviceUri" />
            </list>
        </property>
    </bean>

</beans>
